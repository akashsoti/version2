<header class="hero-unit--overview">
  <div class="content">
    <div class="hero-unit__navigation">

      <div class="hero-unit__logo">
        <%= image_tag("logo.png") %>
      </div>

      <nav class="hero-unit__navigation-links">
        <ul>
          <li>
            <%= link_to "Overview", "#" %>
          </li>
          <li>
            <%= link_to "How it works", "#" %>
          </li>
          <li>
            <%= link_to "Customers", "#" %>
          </li>
          <li>
            <%= link_to "Team", "#" %>
          </li>
          <li>
            <%= link_to "Partners", "#" %>
          </li>
          <li>
            <%= link_to "Press", "#" %>
          </li>
        </ul>
      </nav>

      <div class="hero-unit__login">
        <div class="btn-primary">
          Login
        </div>
      </div>

    </div>
    <div class="hero-unit__hero-head">
      <div class="hero-unit__hero-head__title">
        <h1>The Leading Mobile Loyalty and Insights Platform.<br> Proven Results.</h1>
        <div class="hero-unit__hero-head__title-bullets">
          <span>
            Complete set of tools
          </span>
          <span>
            Works with any POS
          </span>
          <span>
            Easy to use
          </span>
          <span>
            Proven results
          </span>
        </div>
      </div>


      <div class="hero-unit__form-container">
        <div class="hero-unit__form-background">
          <form class="get-started">
            <input type="text-area" name="some_name" value="" placeholder="Your store name"/>
            <input type="text-area" name="some_name" value="" placeholder="Your email"/>
            <select id="locations" name="">
              <option selected>20-50 locations</option>
              <option>50-100 locations</option>
              <option>100+ locations</option>
            </select>
            <div class="btn-success">
              Get Started
            </div>
          </form>
        </div>
      </div>

    </div>
  </div>
  <div class="content feature-intro">

  </div>
</header>
