<section class="hero-unit--overview">
  <div class="content">
    <div class="hero-unit__navigation">

      <div class="hero-unit__logo">
        <%= image_tag("logo.png") %>
      </div>

      <nav class="hero-unit__navigation-links">
        <ul>
          <li>
            <%= link_to "Overview", "#" %>
          </li>
          <li>
            <%= link_to "How it works", "#" %>
          </li>
          <li>
            <%= link_to "Customers", "#" %>
